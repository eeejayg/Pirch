@using SalesAdvisorSharedClasses.Models;
@{
    ViewBag.Title = "products for category";
}
<h1>@ViewBag.category.Name</h1>
<img src="@ViewHelperMethods.CdnImageSrc(@ViewBag.category.Image)?width=300&height=100" />
<ul>
@foreach (ProductType product in ViewBag.category.ProductTypes)
{
    <li>
        <img src="@ViewHelperMethods.CdnImageSrc(product.Images[0])?width=200" />
        <h3>@product.Name</h3>
        <h4>@product.Description</h4>
    </li>
}
</ul>
